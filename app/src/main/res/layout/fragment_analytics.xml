<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false">

        <!-- Заголовок -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аналитика"
            android:textSize="24sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/spinner_cars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@color/text_primary"
                android:hint="Выберите автомобиль" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 1. КАРТОЧКИ ОБЩЕЙ СТАТИСТИКИ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Общая статистика"
            android:textSize="18sp"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:clipChildren="false">

            <!-- Карточка 1: Общий пробег -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/stat_card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_total_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 км"
                        android:textSize="22sp"
                        android:textColor="@color/stat_value_color"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Общий пробег"
                        android:textSize="12sp"
                        android:textColor="@color/stat_label_color"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Карточка 2: Всего топлива -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="@color/stat_card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_total_fuel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 л"
                        android:textSize="22sp"
                        android:textColor="@color/stat_value_color"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Всего топлива"
                        android:textSize="12sp"
                        android:textColor="@color/stat_label_color"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Карточка 3: Средний расход (отдельная строка) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/stat_card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_avg_consumption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 л/100км"
                        android:textSize="22sp"
                        android:textColor="@color/stat_value_color"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Средний расход"
                        android:textSize="12sp"
                        android:textColor="@color/stat_label_color"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_gas_station"
                    app:tint="@color/accent" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2. ГРАФИК РАСХОДА ТОПЛИВА -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="График расхода топлива"
            android:textSize="18sp"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_fuel_consumption"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            android:background="@color/stat_card_background"
            android:padding="4dp" />

        <!-- 3. МОНИТОРИНГ АВТО (ПРЕДУПРЕЖДЕНИЯ) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мониторинг авто"
            android:textSize="18sp"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_warnings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="32dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/warning"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_warning"
                    app:tint="@color/white"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_warning_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Повышенный расход!"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_warning_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Последние поездки показывают расход выше среднего на 15%"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Сообщение, если нет данных -->
        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Нет данных для анализа. Добавьте поездки, чтобы увидеть статистику."
            android:textSize="16sp"
            android:textColor="@color/text_hint"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
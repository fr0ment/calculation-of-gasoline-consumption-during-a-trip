<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background_rounded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить поездку?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Эта операция необратима. Запись будет удалена навсегда."
        android:textColor="@color/dialog_text_secondary"
        android:textSize="20dp"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отмена" android:layout_weight="1"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/card_background_secondary"
            style="@style/Widget.Material3.Button.OutlinedButton"/>
        <Button
            android:id="@+id/btn_confirm_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Удалить"
            android:backgroundTint="@color/error"/>
    </LinearLayout>
</LinearLayout>
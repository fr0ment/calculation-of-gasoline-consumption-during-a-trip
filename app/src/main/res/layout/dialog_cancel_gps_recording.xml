<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_rounded"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отменить поездку?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_final_fuel_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Запись поездки будет остановлена без сохранения. Вы дейстивтельно хотите отменить запись поездки?"
        android:textColor="@color/dialog_text_secondary"
        android:textSize="20dp"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel_final_fuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нет"
            android:layout_weight="1"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/card_background_secondary"
            style="@style/Widget.Material3.Button.OutlinedButton"/>

        <Button
            android:id="@+id/btn_save_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Да"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
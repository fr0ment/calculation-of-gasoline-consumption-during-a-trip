<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background_rounded">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Завершение поездки"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/dialog_text"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_final_fuel_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пожалуйста, введите количество топлива, оставшееся в баке."
        android:textColor="@color/dialog_text_secondary"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Остаток топлива"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_final_fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:autofillHints="no"
            android:textColor="@color/dialog_text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_final_fuel_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Единица измерения: Литры (Остаток топлива)"
        android:textColor="@color/dialog_text_secondary"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel_final_fuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отмена"
            android:layout_weight="1"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/card_background_secondary"
            style="@style/Widget.Material3.Button.OutlinedButton"/>

        <Button
            android:id="@+id/btn_save_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить поездку"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>